<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <TextView
        android:id="@+id/txt_name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_colour"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_below="@id/txt_name"
        android:text="Content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_shape"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_below="@id/txt_colour"
        android:text="Content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_quantity"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_below="@id/txt_shape"
        android:text="Content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_timeSchedule"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_below="@id/txt_quantity"
        android:text="Content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_doorOpen"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_below="@id/txt_timeSchedule"
        android:text="doorOpen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_time"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_below="@id/txt_doorOpen"
        android:text="Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>