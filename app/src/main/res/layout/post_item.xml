<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <TextView
        android:id="@+id/txt_name"
        android:textSize="20sp"
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_colour"
        android:textSize="20sp"
        android:layout_below="@id/txt_name"
        android:text="Colour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_shape"
        android:textSize="20sp"
        android:layout_below="@id/txt_colour"
        android:text="Shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_quantity"
        android:textSize="20sp"
        android:layout_below="@id/txt_shape"
        android:text="Quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_timeSchedule"
        android:textSize="20sp"
        android:layout_below="@id/txt_quantity"
        android:text="Time schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_doorOpen"
        android:textSize="20sp"
        android:layout_below="@id/txt_timeSchedule"
        android:text="doorOpen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_time"
        android:textSize="20sp"
        android:layout_below="@id/txt_doorOpen"
        android:text="Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>